<%= form_with(model: site, local: true) do |form| %>
  <% if site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container bg-red-400 mx-auto px-24 rounded-lg" style="background: linear-gradient(90deg, #ff4b4b 0%, #ed8787 100%)">

    <div class="text-6xl font-bold mb-2 pt-10">
      <p class="text-white"> Paste YouTube Link Below.</p>
    </div>

    <h3 class="text-2xl mb-8 text-gray-100 text-grey-800 ">
          <%= form.label :link %>
          <%= form.text_field :link, id: :site_link, class:"text-grey-800" %>
    </h3>

    <div>
      <a class="bg-white rounded-full py-4 px-8 shadow-lg"  >
        <%= form.submit class:"uppercase font-bold" %>
      </a>
    </div>

  </div>

<% end %>

